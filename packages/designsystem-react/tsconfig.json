{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declarationDir": "./dist/types",
    "paths": {
      "@cr-ai/designsystem/dist/components/*": ["../../node_modules/@cr-ai/designsystem/dist/components/*"],
      "@cr-ai/designsystem/components/*": ["../../node_modules/@cr-ai/designsystem/dist/components/*"]
    }
  },
  "include": ["lib"],
  "exclude": ["node_modules"]
}
